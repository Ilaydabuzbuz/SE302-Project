<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="570.0" prefWidth="787.0" styleClass="anchor-pane" stylesheets="@MainScreenStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.MainScreenController">
    <children>
        <MenuBar layoutX="0.0" layoutY="0.0" prefHeight="25.0" prefWidth="78.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <menus>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label prefHeight="37.0" prefWidth="377.0" styleClass="heading" text="Welcome To Syllabus Application">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin></Label>
                <Button fx:id="CourseBtn" mnemonicParsing="false" onAction="#startCoursePage" prefHeight="23.0" prefWidth="225.0" text="Course Management" />
                <Button fx:id="StudentBtn" mnemonicParsing="false" onAction="#startStudentPage" prefHeight="23.0" prefWidth="225.0" text="Students Management" />
                <Button fx:id="LecturereBtn" mnemonicParsing="false" onAction="#startLecturerPage" prefHeight="23.0" prefWidth="225.0" text="Lecturer Management" />
                <Button fx:id="ClasstroomBtn" mnemonicParsing="false" onAction="#startClassroomPage" prefHeight="23.0" prefWidth="225.0" text="Classroom Management" />
                <Button fx:id="AttendanceBtn" mnemonicParsing="false" onAction="#startAttendancePage" prefHeight="23.0" prefWidth="225.0" text="Attendance Management" />
            </children>
        </VBox>
    </children>
</AnchorPane>
