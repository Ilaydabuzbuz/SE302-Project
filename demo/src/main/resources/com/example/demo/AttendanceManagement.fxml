        <TextField fx:id="searchBar" layoutX="50.0" layoutY="10.0" prefWidth="600.0" promptText="Search by Student Name or Course Name..." />

        <!-- Table view -->
        <TableView fx:id="tableView" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="100.0" text="Attendance ID" />
                <TableColumn fx:id="studentIdColumn" prefWidth="100.0" text="Student ID" />
                <TableColumn fx:id="studentNameColumn" prefWidth="150.0" text="Student Name" />
                <TableColumn fx:id="courseNameColumn" prefWidth="100.0" text="Course Name" />
                <TableColumn fx:id="absenceCountColumn" prefWidth="100.0" text="Absence Count" />
                <!-- Yeni sÃ¼tun: Increase Button -->
                <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Action" />
