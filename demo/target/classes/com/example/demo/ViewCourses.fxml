<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.fxml.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.ViewCoursesController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>

    <!-- Başlık -->
    <Text text="Course List" GridPane.columnSpan="2" GridPane.rowIndex="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Arama Alanı -->
    <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnSpan="2" alignment="CENTER_LEFT">
        <Label text="Search:"/>
        <TextField fx:id="searchField" promptText="Enter course ID"/>
        <Button fx:id="searchButton" text="Search" />
        <Button fx:id="resetButton" text="Reset" />
    </HBox>

    <!-- TableView -->
    <TableView fx:id="tableView" GridPane.rowIndex="2" GridPane.columnSpan="2" prefHeight="400">
        <columns>
            <TableColumn fx:id="courseID" text="Course ID" prefWidth="150"/>
            <TableColumn fx:id="timeToStart" text="Time To Start" prefWidth="150"/>
            <TableColumn fx:id="duration" text="Duration" prefWidth="150"/>
            <TableColumn fx:id="lecturerName" text="Lecturer Name" prefWidth="150"/>
            <TableColumn fx:id="viewStudentsColumn" text="View Students" prefWidth="150"/>
        </columns>
    </TableView>
</GridPane>
